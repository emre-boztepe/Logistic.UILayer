
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<body>

    <canvas id="myChart" style="width:100%;max-width:600px"></canvas>

    <script>
var xValues = ["Uçak", "Gemi", "Tren", "Otobüs", "Motosiklet"];
var yValues = [55, 49, 44, 24, 15];
var barColors = ["red", "green","blue","orange","brown"];

new Chart("myChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {display: false},
    title: {
        display: true,
        text: "Taşımacılık Kategori İstatistiği @DateTime.Now.Year"
    }
  }
});
    </script>

</body>
</html>
<div class="row" style="margin-top:50px">
    <div class="col-lg-3" style="background-color:aquamarine;  height:100px;    text-align:center;  align-items:center">
        <h3>Kategori Sayısı:</h3>
        <h2>@ViewBag.v1</h2>
    </div>

    <div class="col-lg-3" style="background-color:burlywood;  height:100px;    text-align:center;  align-items:center">
        <h3>Müşteri Sayısı:</h3>
        <h2>@ViewBag.v2</h2>

    </div>

    <div class="col-lg-3" style="background-color:coral;  height:100px;    text-align:center;  align-items:center">
        <h3>Son Eklenen Kategori:</h3>
        <h4>@ViewBag.v3</h4>

    </div>

    <div class="col-lg-3" style="background-color:#b200ff;  height:100px;    text-align:center;  align-items:center">
        <h3>Aktif Kategoriler:</h3>
        <h2>@ViewBag.v4</h2>

    </div>
</div>